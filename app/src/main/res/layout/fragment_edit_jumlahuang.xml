<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <TextView
        android:id="@+id/TVeditjudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Nama"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:fontFamily="@font/spacegroteskregular"

        />
    
    <EditText
        android:id="@+id/ETeditjudul"
        android:layout_width="300dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/TVeditjudul"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bg_curve"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <TextView
        android:id="@+id/TVeditDeskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit deskirpsi"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ETeditjudul"
        android:gravity="center"
        android:fontFamily="@font/spacegroteskregular"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/TVeditDeskripsi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bg_curve"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.5"
        />
    
    <ImageView
        android:id="@+id/IVsaveEJU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TVeditDeskripsi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/btnsimpan"
        app:layout_constraintHorizontal_bias="0.2"
        android:layout_marginTop="100dp"
        />

    <ImageView
        android:id="@+id/IVcancelEJU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TVeditDeskripsi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/btnbatal"
        app:layout_constraintHorizontal_bias="0.8"
        android:layout_marginTop="100dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>