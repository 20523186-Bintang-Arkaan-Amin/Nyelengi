<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:padding="8dp">

    <TextView
        android:id="@+id/TVjudul"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Ngepet"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/military_tech_yellow"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/spacegroteskregular"
        />

    <TextView
        android:id="@+id/TVdesc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TVjudul"
        android:text="tiba-tiba nabung 10x lipat dari biasanya, Kok bisa?"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/spacegroteskregular"
        />

    <ImageView
        android:id="@+id/IVupload"
        android:layout_width="27dp"
        android:layout_height="23dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/ios_share"
        app:layout_constraintLeft_toRightOf="@id/TVjudul"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="25dp"
        android:layout_height="21dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="28dp"
        android:button="@drawable/custom_checkbox"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/IVupload"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>