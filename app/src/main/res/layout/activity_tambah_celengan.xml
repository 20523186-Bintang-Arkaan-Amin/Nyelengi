<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tambah_celengan"
    android:background="@color/black"
    >

    <ImageView
        android:id="@+id/IVback_yellow_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/arrow_back_ios"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/savings_yellow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/IVback_yellow_edit"
        app:layout_goneMarginTop="24dp" />
    <EditText
        android:id="@+id/ETnamaTabungan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/IVback_yellow_edit"
        android:hint="Isi Nama Celengan"
        android:layout_marginLeft="48dp"
        android:backgroundTint="#909090"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/ETdescTabungan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ETnamaTabungan"
        android:hint="Isi Deskripsi Tabungan"
        android:layout_marginLeft="48dp"
        android:backgroundTint="#909090"
        android:textColor="@color/white"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CLtotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ETdescTabungan"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        >
        <TextView
            android:id="@+id/TVtotalcele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Total Isi Celengan"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IDR"
            app:layout_constraintTop_toBottomOf="@+id/TVtotalcele"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CLsisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/CLtotal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        >
        <TextView
            android:id="@+id/limitCele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Sisa Isi Celengan"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IDR"
            app:layout_constraintTop_toBottomOf="@+id/limitCele"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CLlimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/CLsisa"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        >
        <TextView
            android:id="@+id/sisaCele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Limit Isi Celengan"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IDR"
            app:layout_constraintTop_toBottomOf="@+id/sisaCele"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/IVsimpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/simpan"
        app:layout_constraintTop_toBottomOf="@id/CLlimit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.8"
        />



</androidx.constraintlayout.widget.ConstraintLayout>